<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		 .btn {
	margin-left:200px; 
	margin-top:200px; 
	}
	.panel {
		margin-top:100px;
		height: 55px;
		margin-left: 100px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.panel}">
	<g:HTMLPanel>	
	<div>
				<g:TextBox ui:field="delcust"></g:TextBox>
			
				<g:Button ui:field="deletecust">Delete</g:Button>
				<g:Button ui:field="resetcustt">Reset</g:Button>
				</div>
			<div class="customers" >
			<g:Button styleName="(style.btn)" ui:field="view">View</g:Button>
		</div>
		<div class="table">
					<g:FlexTable ui:field="table" styleName="(style.flex)" borderWidth="4" visible="false"></g:FlexTable>
					
		</div>
	</g:HTMLPanel>
		</g:FlowPanel>
</ui:UiBinder> 
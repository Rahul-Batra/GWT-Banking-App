<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.panel {
		margin-top:50px;
		width: 200px;
		height: 55px;
		margin-left: 200px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.panel}">
		<g:HTMLPanel>
			<div>Enter the account no. of customer whose record to be modify :</div>
			<div>
				<g:TextBox ui:field="modifycust"></g:TextBox>
			</div>
			<div>Enter the new address: </div>
			<div><g:TextBox ui:field="modifyaddr"/></div>
			<div>Enter the new Email Id: </div>
			<div><g:TextBox ui:field="modifyemail"/></div>
			<div>Enter the new Mobile No: </div>
			<div><g:TextBox ui:field="modifymobile"/></div>
			<div>Enter the new Password: </div>
			<div><g:PasswordTextBox ui:field="modifypswd"/></div>
			
			<div align="center">
				<g:Button ui:field="submitbtn">Submit</g:Button>
				<g:Button ui:field="resetbtn">Reset</g:Button>

			</div>
		</g:HTMLPanel>
	</g:FlowPanel>
</ui:UiBinder> 